{% extends '::base.html.twig' %}

{% block title %}My cool page{% endblock %}

{% block body %}
	{% if show.image != null %}
		<img src="{{ vich_uploader_asset(show, 'imageFile') }}" alt="{{ show.name }} image" />
	{% else %}
	<span>No image</span>
	{% endif %}
	<br />
    {{ show.name }}<br />{% if show.description %}{{ show.description|bbcode_filter('main_filter') }}{% endif %}
{% endblock %}