{% extends '::base.html.twig' %}

{% block title %}My cool page{% endblock %}

{% block body %}
	<table>
		<tr>
			<th></th>
			{% for day in days %}
				<th>{{ day.name }}</th>
			{% endfor %}
		</tr>
    {% for hour in hours %}
		<tr>
			<td>{{ hour.name }}</td>
			{% for slot in hour.slots %}
				{% if slot.show == null %}
					<td>emtpy</td>
				{% else %}
					<td>
						<a href="{{ path('wyur_shows_default_show', {'slug': slot.show.slug}) }}">
							{{ slot.show.name }}
						</a>
					</td>
				{% endif %}
			{% endfor %}
		</tr>
	{% endfor %}
	</table>
{% endblock %}